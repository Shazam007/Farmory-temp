<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeMenuTabs.MenuProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corners"
            android:elevation="10px"
            android:padding="30px"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <!--Image-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:padding="7dp"
            android:src="@drawable/profile"
            app:shapeAppearance="@style/profile_image"
            app:strokeWidth="5dp">

        </com.google.android.material.imageview.ShapeableImageView>


        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_corners"
            android:elevation="10px"
            android:padding="30px"
            android:src="@drawable/edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:layout_marginTop="10dp"
        android:backgroundTint="@color/categoryBack"
        android:background="@drawable/cornershape"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        >

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_profile_border"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/poppins_light"
                android:gravity="left"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:text="Emily Blunt "
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catogray_title" />

            <EditText
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_profile_border"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:gravity="left"
                android:text="+871 - 498 -5268"
                android:enabled="false"
                android:inputType="number"
                android:padding="15dp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catogray_title" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_profile_border"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:gravity="left"
                android:text="Emily18@gamil.com "
                android:inputType="textPersonName"
                android:padding="15dp"
                android:enabled="false"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catogray_title" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_profile_border"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:gravity="left"
                android:textColorHint="@color/black"
                android:hint="Cecilia Chapman,\n711-2880 Nulla St.,\nMankato Mississippi,\n96522."
                android:inputType="textLongMessage|textPersonName"
                android:padding="15dp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:enabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/catogray_title" />


    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>