<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeMenuTabs.MenuProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corners"
            android:elevation="10px"
            android:padding="30px"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/homeTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="My profile"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:padding="7dp"
            android:src="@drawable/profile"
            app:shapeAppearance="@style/profile_image"
            app:strokeWidth="5dp">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Emily Blunt"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:layout_marginTop="10dp"

        android:background="@drawable/cornershape"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        >

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My Orders"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                app:backgroundTint="@color/profileBUtton"
                android:gravity="center_vertical"
                app:cornerRadius="9dp"
                android:textColor="@color/black">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My Payment Cards"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                app:backgroundTint="@color/profileBUtton"
                android:gravity="center_vertical"
                app:cornerRadius="9dp"
                android:textColor="@color/black">

            </Button>



            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My address"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                app:backgroundTint="@color/profileBUtton"
                android:gravity="center_vertical"
                app:cornerRadius="9dp"
                android:textColor="@color/black">

            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Settings"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                app:backgroundTint="@color/profileBUtton"
                android:gravity="center_vertical"
                app:cornerRadius="9dp"
                android:textColor="@color/black">

            </Button>



    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>